{
    "name": "bdscript",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.mjs",
    "scripts": {
        "test": "tsc && node dist/__tests__/runner",
        "docs": "typedoc --options typedoc.json",
        "esm": "gen-esm-wrapper . dist/index.mjs",
        "prepublishOnly": "tsup && npm run docs && npm run esm",
        "prepare": "husky install"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/cloudteamdev/djs-bdscript-next/issues"
    },
    "devDependencies": {
        "@types/node": "^17.0.40",
        "gen-esm-wrapper": "^1.1.3",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.0",
        "prettier": "^2.6.2",
        "tsup": "^6.1.0",
        "typedoc": "^0.22.17",
        "typescript": "4.7.3"
    },
    "dependencies": {
        "@discordjs/builders": "^0.16.0-dev.1654519711-fba9710",
        "discord.js": "^14.0.0-dev.1654519696-fba9710",
        "tslib": "^2.4.0"
    },
    "lint-staged": {
        "*.ts": "npx prettier --write --config .prettierrc"
    },
    "tsup": {
        "clean": true,
        "dts": true,
        "entry": [
            "src/**/*.ts",
            "!src/**/*.d.ts"
        ],
        "minify": true,
        "skipNodeModulesBundle": true,
        "target": "esnext",
        "bundle": false,
        "shims": false,
        "keepNames": true,
        "splitting": false,
        "suppress": true,
        "format": [
            "cjs",
            "esm"
        ],
        "sourcemap": true
    }
}
